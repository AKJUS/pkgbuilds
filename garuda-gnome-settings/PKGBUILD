# Maintainer: dr460nf1r3 <dr460nf1r3 at garudalinux dot org>

pkgname=garuda-gnome-settings
pkgver=1.5.4
pkgrel=1
arch=('any')
url="https://gitlab.com/garuda-linux/themes-and-settings/settings/$pkgname"
license=('GPL')
makedepends=('coreutils')
source=("https://gitlab.com/garuda-linux/themes-and-settings/settings/garuda-gnome-settings/-/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('SKIP')
pkgdesc='Garuda Linux GNOME settings'
install=$pkgname.install
provides=('garuda-desktop-settings')
conflicts=('garuda-desktop-settings')

package() {
	install -d "$pkgdir"/etc
	cp -rf "$srcdir"/$pkgname-$_commit/etc "$pkgdir"
	depends=('garuda-backgrounds'
		'garuda-common-settings'
		'gnome-themes-extra'
		'volantes-cursors'
		'ttf-fira-sans'
		'ttf-firacode-nerd')
}
