depends=('pciutils' 'coreutils' 'grep')

package() {
  pkgdesc="A tool to manage hardware drivers and configurations in Garuda Linux."

  install -Dm755 "$srcdir/garuda-hardware-tool" "$pkgdir/usr/bin/garuda-hardware-tool"
}
