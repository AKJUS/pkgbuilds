pkgname=garuda-update
pkgdesc="The Garuda Linux update command, in a separate package to allow separate updating"
pkgver=4.2.5
pkgrel=1
arch=('any')
license=('GPL')
depends=('coreutils' 'sed' 'gawk' 'pacman' 'wget')
source=("garuda-update" "update-helper-scripts" "auto-pacman" "main-update" "logrotate" "config")
sha512sums=('9476d34f6d8112601d0781952596b4f612288abe0be323d5ae06e48ff434f4eb312b7255e1b9c4837ac4e97cf5ad006170554533e2a27d4455f2c18c73cda9db'
